/* Includes ------------------------------------------------------------------*/
#include "main.h"
#include "jsmn.h"

#define MAXANSWERLENGTH 256
#define MAXNUMBER_OF_TOKENS 32
#define STR_LENGTH 8
#define NUM_LENGTH 15

typedef struct
{
 uint8_t REQUEST[STR_LENGTH];
 uint8_t PARAMETR[STR_LENGTH];
 uint8_t NAME[STR_LENGTH];
 uint8_t RS485ADR[NUM_LENGTH];
 uint8_t IP_ADDRESS[STR_LENGTH];
 uint8_t NETMASK[STR_LENGTH];
 uint8_t GATEWAY[STR_LENGTH];
}tmStruct;

tmStruct RAMStruct;
/* Private includes ----------------------------------------------------------*/
/* USER CODE BEGIN Includes */
#include "net.h"
/* USER CODE END Includes */

